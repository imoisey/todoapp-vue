{
    "name": "imoisey/todoapp",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Moiseev",
            "email": "developer.modx@gmail.com"
        }
    ],
    "config": {
      "process-timeout": 0,
      "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "ext-json": "^7.4",
        "php-di/php-di": "^6.2",
        "slim/psr7": "^1.2",
        "slim/slim": "^4.5",
        "symfony/console": "^5.1"
    },
    "require-dev": {
        "overtrue/phplint": "^2.0",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.16"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "lint": "phplint --ansi",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm"
    }
}
